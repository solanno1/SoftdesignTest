@model LibrarySystem.Web.ViewModels.BookViewModel

<link href="~/Content/Styles/books.css" rel="stylesheet" />
<script src="~/Content/Scripts/books.js"></script>

<div class="container">
    <h2>Detalhes do Livro</h2>

    <p><strong>Título:</strong> @Model.Title</p>
    <p><strong>Autor:</strong> @Model.Author</p>
    <p><strong>Disponibilidade:</strong> @(Model.IsRented ? "Alugado" : "Disponível")</p>

    @if (!Model.IsRented)
    {
        <form action="@Url.Action("RentBook", "Rentals", new { bookId = Model.Id })" method="post">
            <input type="hidden" name="UserId" value="@ViewBag.UserId" />
            <button type="submit" class="alugar">Alugar</button>
        </form>
    }
</div>